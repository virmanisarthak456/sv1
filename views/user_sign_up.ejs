<h1>Sign up</h1>
<form action="/users/create" method="POST">
    
    <!-- action will take the user to required page after clicking the submit button -->

    <input type="text" name="name" placeholder="Your Name" required>
    <input type="email" name="email" placeholder="Your Email" required>
    <input type="password" name="password" placeholder="Your Password" required>
    <input type="password" name="confirm_password" placeholder="confirm_password" required>
    <input type="submit" value="Sign up">




</form>
<p>
    <a href="/users/auth/google">Google signIn/signUp</a>
</p>